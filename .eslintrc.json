{
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "padded-blocks": 0,
      "no-multiple-empty-lines": "error",
        "space-in-parens": ["error", "always"],
        "quote-props": [
            "error",
            "as-needed"
        ],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            "error",
            "never"
        ],
        "semi-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "brace-style": [
            "error",
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "camelcase": [
            2,
            {
                "properties": "always"
            }
        ],
        "indent": [
            2,
            2
        ],
        "require-await": "error",
        "key-spacing": [
            "error",
            {
                "beforeColon": false
            }
        ]
    }
}
